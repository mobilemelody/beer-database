{{#if id}}
<div class="container content pt-3">
	<div class="display-4 row">
		<div class="col-md-9">{{brewery.name}}</div>
		<div class="text-md-right col-md-3">
			<a href="/breweries/{{brewery.id}}/edit" class="btn btn-outline-secondary"><i class="fas fa-edit"></i> Edit brewery</a>
		</div>
	</div>
	<div class="brewery-info text-muted pb-3">
		{{brewery.city}}, {{brewery.state}} / {{brewery.country}}
	</div>
	<h2>Beers</h2>
	<table class="table beer-table">
		<thead>
			<tr>
				<th></th>
				<th>Beer</th>
				<th>Style</th>
				<th>Average rating</th>
				<th>Number of ratings</th>
      </tr>
		</thead>
		<tbody>
			{{#each beers}}
			<tr>
				<td>{{inc @index}}</td>
				<td><a href="/beers/{{id}}">{{name}}</a></td>
				<td><a href="/styles/{{style_id}}">{{style}}</a></td>
				<td>{{avg_rating}}</td>
				<td>{{num_reviews}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>

{{else}}
<div class="container content pt-3">
	<h1 class="display-4">Top breweries</h1>
	<div class="row">
		<div class="col-md-9">
			<table class="table beer-table">
				<thead>
					<tr>
						<th></th>
						<th>Brewery</th>
						<th>Average rating</th>
						<th>Number of beers</th>
		      </tr>
				</thead>
				<tbody>
					{{#each breweries}}
					<tr>
						<td>{{inc @index}}</td>
						<td><a href="/breweries/{{{id}}}">{{name}}</a></td>
						<td>{{avg_rating}}</td>
						<td>{{num_beers}}</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
		<div class="col-md-3">
			<a href="/breweries/add" class="btn btn-primary btn-lg btn-block"><i class="fas fa-plus"></i> Add a brewery</a>
		</div>
	</div>
</div>
{{/if}}