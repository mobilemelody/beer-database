{{#if id}}
<div class="container content pt-3">
	<div class="display-4 row">
		<div class="col-md-9">{{style.name}}</div>
		<div class="text-md-right col-md-3">
			<a href="/styles/{{style.id}}/edit" class="btn btn-outline-secondary"><i class="fas fa-edit"></i> Edit style</a>
		</div>
	</div>
	<div class="style-info pb-3">
		<div class="text-muted">
			<small>ABV range: {{style.abv_range}} | IBU range: {{style.ibu_range}}</small>
		</div>
		<div class="">
			{{style.description}}
		</div>
	</div>
	<h2>Beers</h2>
	<table class="table beer-table">
		<thead>
			<tr>
				<th></th>
				<th>Beer</th>
				<th>Brewery</th>
				<th>Average rating</th>
				<th>Number of ratings</th>
      </tr>
		</thead>
		<tbody>
			{{#each beers}}
			<tr>
				<td>{{inc @index}}</td>
				<td><a href="/beers/{{id}}">{{name}}</a></td>
				<td><a href="/breweries/{{brewery_id}}">{{brewery}}</a></td>
				<td>{{avg_rating}}</td>
				<td>{{num_reviews}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>

{{else}}
<div class="container content pt-3">
	<h1 class="display-4">Beer styles</h1>
	<div class="row">
		<div class="col-md-9">
			<table class="table styles-table">
				<thead>
					<tr>
						<th></th>
						<th>Style</th>
						<th>Number of beers</th>
					</tr>
				</thead>
					{{#each styles}}
					<tr>
						<td>{{inc @index}}</td>
						<td><a href="/styles/{{id}}">{{name}}</a></td>
						<td>{{count}}</td>
					</tr>
					{{/each}}
			</table>
		</div>
		<div class="col-md-3">
			<a href="/styles/add" class="btn btn-primary btn-lg btn-block"><i class="fas fa-plus"></i> Add a style</a>
		</div>
	</div>
</div>
{{/if}}