<div class="container content pt-3">
	<h1 class="display-4">
		{{#if id}}Edit <a href="/venues/id">Venue name</a>
		{{else}}Add a venue{{/if}}
	</h1>
	<form>
		<div class="form-row">
			<div class="form-group col-lg-6">
				<label for="venueName">Venue name</label>
				<input type="text" class="form-control" id="venueName" value="{{name}}" required>
			</div>
			<div class="form-group col-lg-6">
				<label for="address">Address</label>
				<input type="text" class="form-control" id="address" value="{{address}}">
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-lg-6">
				<label for="city">City</label>
				<input type="text" class="form-control" id="city" value="{{city}}" required>
			</div>
			<div class="form-group col-lg-6">
				<label for="state">State/Province/Region</label>
				<input type="text" class="form-control" id="state" value="{{state}}" required>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-12">
			<button type="submit" class="btn btn-primary">
				{{#if id}}Update venue
				{{else}}Add venue{{/if}}
			</button>
			{{#if id}}
			<button type="button" class="btn btn-outline-danger">Delete venue</button>
			{{/if}}
			</div>
		</div>
	</form>
</div>
